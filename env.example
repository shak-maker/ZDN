# Database Configuration
DATABASE_URL="mysql://root:password@localhost:3306/zdn_db"
MYSQL_ROOT_PASSWORD="your_strong_password_here"
MYSQL_DATABASE="zdn_db"
MYSQL_USER="zdn_user"
MYSQL_PASSWORD="your_user_password_here"

# JWT Configuration
JWT_SECRET="your-very-strong-jwt-secret-minimum-32-characters-long"

# API Key Configuration
API_KEY_SECRET="your-very-strong-api-key-secret-minimum-32-characters-long"

# Application Configuration
NODE_ENV="production"
PORT=3001

# CORS Configuration (optional)
CORS_ORIGIN="https://yourdomain.com"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Redis Configuration (optional)
REDIS_URL="redis://localhost:6379"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="/var/log/zdn/app.log"
